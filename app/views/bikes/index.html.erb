<p id="notice"><%= notice %></p>

<h1>Bikes</h1>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= image_tag bike.avatar.url(:s3_domain_url) %></td>
        <td><%= bike.model %></td>
        <td><%= bike.brand %></td>
        <td><%= bike.user_id %></td>

        <% if (user_signed_in? && (current_user.id == bike.user_id)) %>
          <td><%= link_to "Edit", edit_bike_path(bike) %></td>
          <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td><%= link_to 'Show', bike %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if (user_signed_in?) %>
<%= link_to 'New Bike', new_bike_path %>
<% end %>
