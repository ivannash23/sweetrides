<div class="album py-5 bg-light">
    <div class="container">
        <% if (user_signed_in?) %>
        <div class="row">
          <div class="col-md-12">
            <h3 class="text-center" style="color: black;">Would Like To Add More Motorcycles To Your Inventory?</h3>
            <%= link_to 'Add Bike', new_bike_path, style: "background-color: black;color:white;", class: "col-md-12 btn btn-default btn-lg my-2" %>
          </div>
        </div>
        <% end %>
        <br>
        <div class="row">
            <% @bikes.each do |bike| %>
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <%= image_tag bike.avatar.url(:medium), class: "card-mig-top", style: "height: 225px; width: 100%; display: block;" %>
                            <div class="card-body">
                                <p class="card-text">
                                    <%= bike.brand %>,
                                        <%= bike.model %>
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">
                                          <%= link_to "View", bike_path(bike) %>
                                          </button>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
                <% end %>
        </div>
    </div>
</div>