<div class="text-center">
    <h2>• Feature Bikes •</h2>
</div>
<br>
<div id="rowFeature" class="row">
    <% @bikes.each do |bike| %>
        <div id="imageFeature" class="col-sm-3 col-md-3  ">
            <%= image_tag bike.avatar.url(:medium), style: "min-height:500px;"%>
        </div>
        <div id="captionFeature" class="col-sm-3 col-md-3">
            <div class="caption text-center">
                <h3><%= bike.brand %>, <%= bike.model %></h3>
                <p>$ PRICE</p>
                <p><%= link_to "Details", bike_path(bike), class: "btn btn-default", id: "buttonDetailsFeature" %></p>
            </div>
        </div>
        <% end %>
</div>
<br>
<div class="text-center">
    <h2>• Latest Bikes •</h2>
</div>
<br>
<div id="order-by">
    <form>
        <select name="sort">
            <option value="brand">brand</option>
            <option value="model">model</option>
        </select>
        <input type="submit" value="Sort" />
    </form>
</div>
<% @bikesOrder.each do |bike| %>
    <%= image_tag bike.avatar.url(:medium)%>
<% end %>
</div>

